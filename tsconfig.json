{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"components/*": ["src/components/*"],
			"hooks/*": ["src/hooks/*"],
			"providers": ["src/providers"],
			"providers/*": ["src/providers/*"],
			"pages/*": ["src/pages/*"],
			"enums": ["src/enums"],
			"enums/*": ["src/enums/*"],
			"schemas": ["src/schemas"],
			"schemas/*": ["src/schemas/*"],
			"stores/*": ["src/stores/*"],
			"navigation/*": ["src/navigation/*"],
			"types": ["src/types"],
			"types/*": ["src/types/*"],
			"utils/*": ["src/utils/*"]
		},
		"types": [
			"vite/client",
			"google.maps",
			"react-hook-form"
			// "vitetest/globals",
			// "cypress",
			// "@tetsing-library/cypress",
		]
	},
	"include": ["src/**/*", "env.config.ts"],
	"exclude": [
		"build",
		"build_scripts",
		"coverage",
		"node_modules",
		"src/assets"
	]
	// "references": [{ "path": "./tsconfig.node.json" }]
}
